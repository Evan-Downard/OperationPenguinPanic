<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spacenew"
    tools:context="com.test.operationpenguinpanic.MainMenu">

    <TextView
        android:id="@+id/scoresTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="15dp"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:background="@drawable/arrowleft"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:onClick="sendMain"/>

    <Button
        android:id="@+id/MarathonScores1"
        android:layout_below="@id/scoresTitle1"
        android:layout_centerInParent="true"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:text= "Marathon"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="sendMarathonScores"
        />

    <Button
        android:layout_toLeftOf="@id/MarathonScores1"
        android:layout_below="@id/scoresTitle1"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="Racing"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="sendRacingScores"/>

    <Button
        android:layout_below="@id/scoresTitle1"
        android:layout_toRightOf="@id/MarathonScores1"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text= "Asteroids"
        android:textStyle="bold"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/asteroidTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Asteroids"
        android:textSize="30dp"
        android:layout_below="@id/MarathonScores1"
        android:layout_centerInParent="true" />

    <TableLayout
