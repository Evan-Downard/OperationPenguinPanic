        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/tableshape">
        <TableRow>
