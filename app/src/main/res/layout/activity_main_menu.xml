<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.operationpenguinpanic.MainMenu"
    android:background="@drawable/spacenew"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="70sp"
        android:text="Operation"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:id="@+id/secondtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="50sp"
        android:text="Penguin Nova"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textView" />

    <Button
        android:id="@+id/startgame"
        android:text="Start Game"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:onClick="sendGame"
        android:layout_marginTop="55dp"
        android:layout_below="@id/secondtitle"
        android:layout_marginLeft="7dp" />


    <Button
        android:id="@+id/button"
        android:text="Customization"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:onClick="sendCustom"
        android:layout_below="@id/startgame"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button2"
        android:text="Options"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/button"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:onClick="sendOption" />

    <Button
        android:id="@+id/button3"
        android:text="Score"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/button2"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:onClick="sendScore" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:src="@drawable/flotingpenguin"
        android:layout_alignTop="@+id/startgame"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:src="@drawable/penguinsign"
        android:layout_marginTop="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:src="@drawable/penguinsign"
        android:layout_marginTop="96dp"
        android:layout_toEndOf="@id/secondtitle"
        android:layout_toRightOf="@id/secondtitle" />
</RelativeLayout>