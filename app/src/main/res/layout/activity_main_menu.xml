<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spacenew"
    tools:context="com.test.operationpenguinpanic.MainMenu">

    <Button
        android:id="@+id/startgame"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/secondtitle"
        android:layout_alignStart="@+id/secondtitle"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttonshape"
        android:onClick="sendGame"
        android:text="Start Game"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_below="@+id/button3"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:background="@drawable/buttonshape"
        android:onClick="sendCustom"
        android:text="Customization"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_below="@+id/button"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:background="@drawable/buttonshape"
        android:onClick="sendOption"
        android:text="Options"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:background="@drawable/buttonshape"
        android:onClick="sendScore"
        android:text="Score"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/startgame"
        android:layout_toRightOf="@+id/startgame"
        android:scaleX="-1"
        android:src="@drawable/flotingpenguin" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:src="@drawable/happyholdrevs" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView2"
        android:src="@drawable/happyhold" />

    <TextView
        android:id="@+id/secondtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Penguin Nova"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="45sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/web"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonshape"
        android:onClick="openWeb"
        android:text="Web"
        android:textSize="15sp" />


</RelativeLayout>